<Page
    x:Class="SimplyRugby.PlayerDevCentreAdmin.PlayerDevCentreAdmin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SimplyRugby.Navigation.UserNavAdminStaff"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="#F8F8FF">

    <Grid>
        <Grid>
            <local:UserNavAdminStaff VerticalAlignment="Top" HorizontalAlignment="Left" Width="200"/>
        </Grid>

        <TextBlock Text="Team Management and Staff Admin" Foreground="#C9A959" FontFamily="Cascadia Mono" FontWeight="Bold" FontSize="24" Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Button to View Teams -->
            <Button Content="View Teams" Background="#253D5B" Foreground="#C9A959" FontFamily="Cascadia Mono" Command="{x:Bind ViewTeamsCommand}" Margin="0,10" Width="200"/>

            <Button Content="Create Teams" Background="#253D5B" Foreground="#C9A959" FontFamily="Cascadia Mono" Command="{x:Bind CreateTeamsCommand}" Margin="0,10" Width="200"/>

            <Button Content="View Staff" Background="#253D5B" Foreground="#C9A959" FontFamily="Cascadia Mono" Command="{x:Bind ViewStaffCommand}" Margin="0,10" Width="200"/>
        </StackPanel>
    </Grid>
</Page>
